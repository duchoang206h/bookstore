<%- include ('../partials/_header_cart.ejs')  %> 

  <div class="container">

    <br>
    <div class="container mb-4 home-books">
      <% books.forEach(book => { %>
        <div class="card" style="width: 18rem; position: relative;" >
          
          <div class="card-body" >
            <a href="/books/view/<%= book.id %> ">
            <img  style="height: 15rem;" src="<%= book.image  %>"  class="card-img-top" alt="...">
            <hr class="my-2">
            <h5 class="card-title" style="color: black;"><%= book.title %></h5>
            </a>
            <h3 class="lead text-danger p-0">Price: <%= book.price %></h3>
          
           
          </div>
      </div>
     <% }) %> 
    </div>
  </div>
